# Настройки данных
ABBREVIATIONS_JSON=data\repositories\common\grouped_abbrs.json
STREET_BOOK=<path_to_street_book>

# Настройки базы данных MySQL
MYSQL_USER=<your_mysql_user>
MYSQL_PASSWORD=<your_mysql_password>
MYSQL_HOST=<your_mysql_host>
MYSQL_PORT=<your_mysql_port>
MYSQL_DB=<your_mysql_db>
MYSQL_ECHO=false

# Настройки Белпочты
BELPOST_BASE_URL=<belpost_base_url>
BELPOST_SEARCH_ENDPOINT=<belpost_search_endpoint>
BELPOST_TIMEOUT=30
BELPOST_MAX_RESULTS=10

# Настройки Selenium
SELENIUM_HEADLESS=true
SELENIUM_MAX_DRIVERS=3
SELENIUM_DRIVER_TTL=300
SELENIUM_WINDOW_WIDTH=1920
SELENIUM_WINDOW_HEIGHT=1080
SELENIUM_CHROME_OPTIONS=

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_CONSOLE=true
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_USE_EMOJI=true

# Настройки пользовательского интерфейса
UI_TITLE=Поиск адресов Белпочта
UI_WINDOW_WIDTH=1200
UI_WINDOW_HEIGHT=800
UI_THEME_MODE=LIGHT
UI_MAX_RESULTS=9

# Общие настройки приложения
DEBUG=false
ENVIRONMENT=development
APP_NAME=addr_corr